		{
			"name": "2. Rate Limiting Tests",
			"item": [
				{
					"name": "Get All Books (Rate Limit: 20/min)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200 or 429\", function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([200, 429]);",
									"});",
									"",
									"if (pm.response.code === 429) {",
									"    console.log(\"Rate limit exceeded!\");",
									"    var jsonData = pm.response.json();",
									"    console.log(\"Error:\", jsonData.message);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{authToken}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/books",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"books"
							]
						},
						"description": "Rate Limiting test: maximum 20 calls per minute. Run this request many times quickly to test the limit."
					},
					"response": []
				},
				{
					"name": "Get Book By ID (Rate Limit: 10/min)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200, 404 or 429\", function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([200, 404, 429]);",
									"});",
									"",
									"if (pm.response.code === 429) {",
									"    console.log(\"Rate limit exceeded!\");",
									"    var jsonData = pm.response.json();",
									"    console.log(\"Error:\", jsonData.message);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{authToken}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/books/1",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"books",
								"1"
							]
						},
						"description": "Rate Limiting test: maximum 10 calls per minute. Run this request more than 10 times quickly."
					},
					"response": []
				}
			],
			"description": "Rate Limiting Aspect testing - limiting number of calls per minute"
